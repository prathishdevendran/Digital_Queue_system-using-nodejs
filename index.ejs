<!DOCTYPE html>
<html>
<head>
  <title>Hospital Priority Queue</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body class="bg-light">

<div class="container py-4">

  <h2 class="text-center mb-4">Hospital Digital Queue System</h2>

  <div class="text-end mb-3">
    <a href="/history" class="btn btn-secondary">View History</a>
  </div>

  <!-- Add Patient Form -->
  <form action="/add" method="POST" class="row g-3 mb-4">

    <div class="col-md-3">
      <input type="text" name="name" class="form-control" placeholder="Name" required>
    </div>

    <div class="col-md-2">
      <input type="number" name="age" class="form-control" placeholder="Age" required>
    </div>

    <div class="col-md-3">
      <input type="tel" name="phone" class="form-control" placeholder="Phone" required>
    </div>

    <div class="col-md-2">
      <select name="priority" class="form-select" required>
        <option value="high">High Priority</option>
        <option value="medium">Medium Priority</option>
        <option value="low">Low Priority</option>
      </select>
    </div>

    <div class="col-md-2">
      <button type="submit" class="btn btn-success w-100">Add</button>
    </div>
  </form>

  <!-- Serve Button -->
  <form action="/serve" method="POST" class="mb-4">
    <button class="btn btn-danger w-100" <% if (allEmpty) { %> disabled <% } %>>
      Serve Next
    </button>
  </form>

  <!-- Queues Display -->
  <div class="row">
    <!-- High Priority -->
    <div class="col-md-4">
      <div class="card border-danger">
        <div class="card-header bg-danger text-white">High Priority Queue</div>
        <ul class="list-group list-group-flush">
          <% if (high.length === 0) { %>
            <li class="list-group-item text-center">Empty</li>
          <% } else { %>
            <% high.forEach(p => { %>
              <li class="list-group-item">
                <b><%= p.name %></b> (ID: <%= p.id %>)
              </li>
            <% }) %>
          <% } %>
        </ul>
      </div>
    </div>

    <!-- Medium Priority -->
    <div class="col-md-4">
      <div class="card border-warning">
        <div class="card-header bg-warning text-white">Medium Priority Queue</div>
        <ul class="list-group list-group-flush">
          <% if (medium.length === 0) { %>
            <li class="list-group-item text-center">Empty</li>
          <% } else { %>
            <% medium.forEach(p => { %>
              <li class="list-group-item">
                <b><%= p.name %></b> (ID: <%= p.id %>)
              </li>
            <% }) %>
          <% } %>
        </ul>
      </div>
    </div>

    <!-- Low Priority -->
    <div class="col-md-4">
      <div class="card border-info">
        <div class="card-header bg-info text-white">Low Priority Queue</div>
        <ul class="list-group list-group-flush">
          <% if (low.length === 0) { %>
            <li class="list-group-item text-center">Empty</li>
          <% } else { %>
            <% low.forEach(p => { %>
              <li class="list-group-item">
                <b><%= p.name %></b> (ID: <%= p.id %>)
              </li>
            <% }) %>
          <% } %>
        </ul>
      </div>
    </div>

  </div>

</div>

</body>
</html>
